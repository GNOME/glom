            ]
        },
        {
            "name": "gtksourceviewmm-5.0",
            "config-opts": [ "--disable-documentation" ],
            "build-options" : { "cxxflags": "-O2 -g -std=c++11" },
            "sources": [
                {
                    "type": "archive",
                    "url": "http://ftp.gnome.org/pub/GNOME/sources/gtksourceviewmm/3.18/gtksourceviewmm-3.18.0.tar.xz",
