                {
                    "type": "archive",
                    "url": "http://ftp.gnome.org/pub/GNOME/sources/pangomm/2.38/pangomm-2.38.1.tar.xz",
                    "sha256": "effb18505b36d81fc32989a39ead8b7858940d0533107336a30bc3eef096bc8b"
                }
            ]
        },
        {
            "name": "atkmm",
            "config-opts": [ "--disable-documentation" ],
